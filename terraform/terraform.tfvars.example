# Copy this file to terraform.tfvars and fill in values

aws_region   = "us-east-1"
project_name = "claude-analytics"
environment  = "dev"

# Database configuration
db_instance_class    = "db.t3.micro"
db_allocated_storage = 20
db_name              = "claude_logs"
db_username          = "claude_admin"
db_password          = "CHANGE_ME_TO_A_SECURE_PASSWORD"

# Network access - restrict to your IP/CIDR in production
allowed_cidr_blocks = ["0.0.0.0/0"]

# High availability (enable for production)
multi_az = false
